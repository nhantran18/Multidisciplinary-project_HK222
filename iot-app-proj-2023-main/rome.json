{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "organizeImports": {
    "enabled": false
  },
  "files": {
    "ignore": [
      "**/node_modules/**", "**/dist/**", "**/web-build/**", "**/.expo/**",
      "**/.vscode/**", "*.json", "yarn.lock",
      "**/.github/**", "**/.husky/**"
    ]
  },
  "linter": {
    "enabled": true,
    "ignore": [],
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "ignore": [],
    "indentStyle": "space",
    "indentSize": 2
  }
}
